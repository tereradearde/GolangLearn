FROM golang:1.24.5-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /runner ./cmd/runner

FROM alpine:3.20
RUN apk add --no-cache ca-certificates
COPY --from=builder /runner /runner
EXPOSE 8082
ENTRYPOINT ["/runner"]


